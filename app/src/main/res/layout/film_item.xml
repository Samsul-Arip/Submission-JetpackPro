<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:riv_corner_radius="20dp"
        android:src="@drawable/poster_aquaman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latto_regular"
        android:text="@string/spider_man_no_way_home"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/roundedImage"
        app:layout_constraintStart_toStartOf="@+id/roundedImage"
        app:layout_constraintTop_toBottomOf="@+id/roundedImage" />

</androidx.constraintlayout.widget.ConstraintLayout>